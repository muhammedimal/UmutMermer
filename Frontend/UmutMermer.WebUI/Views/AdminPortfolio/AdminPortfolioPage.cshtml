@model List<AdminProductViewModel>
@{

    ViewData["Title"] = "AdminPortfolioPage";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<div class="content-wrapper">
    <!-- Container-fluid starts -->
    <div class="container-fluid">
        <!-- Main content starts -->
        <div>
            <!-- Row Starts -->
            <div class="row">
                <div class="col-sm-12 p-0 text-center">
                    <div class="main-header">
                        <h4>Ekipmanlar</h4>
                    </div>
                </div>
            </div>
            <!-- Row end -->
            <!-- Row start -->
            <!-- Form Control starts -->
            <!-- Form Control ends -->
            <!-- Textual inputs starts -->
            <div class="col-lg-1"></div>
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-header-text"></h5>

                    </div>

                    <!-- end of modal -->
                    <div class="card-block">

                        <br />
                        <a href="AddProduct" type="button" class="btn btn-outline-info">Ekipman Ekle</a>
                        <table class="table table-hover">
                            <thead>
                                <tr>

                                    <th>Adı</th>
                                    <th>Açıklama</th>
                                    <th></th>
                                    <th></th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    
                                <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Description</td>

                                        <td>
                                            @*<a href="@Url.RouteUrl("ProductUpdate",new {id = item.ID })" class="btn btn-outline-success">Güncelle</a>*@
                                            <a href="/Product/UpdateProduct/@item.Id" class="btn btn-outline-success">Güncelle</a>
                                            <a href="/Product/DeleteProduct/@item.Id/" class="btn btn-outline-danger">Sil</a>
                                        </td>


                                    </tr>
                                }                               
                            </tbody>

                        </table>

                    </div>

                </div>

            </div>

        </div>

    </div>

</div>

<script src="style/jquery-3.2.1.min.js"></script>
<script src="style/moment.js"></script>
<script src="style/toastr.min.js"></script>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script src="assets/plugins/light-box/js/ekko-lightbox.js"></script>
<script src="assets/plugins/lightbox2/dist/js/lightbox.js"></script>

@model ProductUpdateDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Container-fluid starts -->
    <div class="container-fluid">
        <!-- Main content starts -->
        <div>
            <!-- Row Starts -->
            <div class="row">
                <div class="col-sm-12 p-0">
                    <div class="main-header">
                        <h4></h4>
                    </div>
                </div>
            </div>

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-header-text">Ekipman Ekleme</h5>
                    </div>




                    <div class="card-block">


                        <form method="post">
                            <div class="col-lg-3">
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group row">
                                    <div class="col-md-4"><label class="col-form-label f-w-600">İsim</label></div>
                                    <div class="col-md-8">
                                        <input type="text" asp-for="Name" class="form-control" />
                                    </div>

                                </div>
                                <div class="form-group row">
                                    <div class="col-md-4"><label class="col-form-label f-w-600">Kategori</label></div>
                                    <div class="col-md-8">
                                        <select name="Category" class="form-control" tabindex="-1" aria-hidden="true">

                                            <option value="Temizleme">Mezar Taşı</option>
                                            <option value="Öğütme">Logar Kapağı </option>
                                            <option value="Taşıma">Hayrat Çeşmesi</option>
                                            <option value="Paketleme">Muhammed İmal</option>
                                            <option value="Depolama">Hakan Ceylan</option>
                                            <option value="Depolama">Oğuzhan Seçgel</option>

                                        </select>

                                    </div>

                                </div>


                                <div class="form-group row">
                                    <div class="col-md-4"><label class="col-form-label f-w-600">Açıklama</label></div>
                                    <div class="col-md-8">
                                        <input type="text" asp-for="Description" class="form-control" />
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-md-4"><label class="col-form-label f-w-600">Resim</label></div>
                                    <div class="col-md-8">
                                        <input type="text" asp-for="Images" class="form-control" />
                                    </div>
                                </div>

                                <div class="col-md-8">
                                    <button type="submit" value="CompanyUpdate" name="ButtonUpdate" class="btn btn-outline-success">
                                        Ekle
                                    </button>
                                </div>




                            </div>
                            <div class="col-lg-3">
                            </div>
                        </form>



                    </div>


                </div>

            </div>



        </div>

    </div>

</div>